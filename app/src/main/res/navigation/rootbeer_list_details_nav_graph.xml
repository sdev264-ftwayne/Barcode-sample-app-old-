<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootbeer_list_details_nav_graph"
    app:startDestination="@id/rootBeerListFragment">


        <fragment
            android:id="@+id/rootBeerListFragment"
            android:name="edu.ivytech.rootbeer.RootBeerListFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_root_beer_list">
            <action
                android:id="@+id/action_List_to_Detail"
                app:destination="@id/rootBeerDetailFragment" />
        </fragment>
        <fragment
            android:id="@+id/rootBeerDetailFragment"
            android:name="edu.ivytech.rootbeer.RootBeerDetailFragment"
            android:label="@string/detail_name"
            tools:layout="@layout/fragment_root_beer_detail">
            <argument
                android:name="item_id"
                app:argType="java.util.UUID" />
            <argument
                android:name="title"
                app:argType="string"
                android:defaultValue=" " />
        </fragment>

</navigation>